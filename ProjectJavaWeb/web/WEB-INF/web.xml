<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>/WEB-INF/applicationContext.xml</param-value>
    </context-param>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <servlet>
        <servlet-name>dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>2</load-on-startup>
    </servlet>
    <servlet>
        <servlet-name>InicioSesion</servlet-name>
        <servlet-class>Servlet.InicioSesion</servlet-class>
        <url-pattern>/iniciar</url-pattern>
    </servlet>
    <servlet>
        <servlet-name>InsertarProducto</servlet-name>
        <servlet-class>Servlet.InsertarProducto</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>InsertarUsuarios</servlet-name>
        <servlet-class>Servlet.InsertarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditarUsuarios</servlet-name>
        <servlet-class>Servlet.EditarUsuarios</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EliminarUsuarios</servlet-name>
        <servlet-class>Servlet.Eliminar_usuario</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EditProd</servlet-name>
        <servlet-class>Servlet.EditProd</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InicioSesion</servlet-name>
        <url-pattern>/iniciar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertarProducto</servlet-name>
        <url-pattern>/Insertar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>InsertarUsuarios</servlet-name>
        <url-pattern>/Insertar_usu</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditarUsuarios</servlet-name>
        <url-pattern>/EditarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EliminarUsuarios</servlet-name>
        <url-pattern>/EliminarUsuarios</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EditProd</servlet-name>
        <url-pattern>/EditProd</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>redirect.jsp</welcome-file>
    </welcome-file-list>
</web-app>
